#!/usr/bin/env node

/**
 * Module dependencies.
 */

var server = require('../lib/server')
  , program = require('commander')
  , pkg = require('../package');

// options

program
  .version(pkg.version)
  .parse(process.argv);

// title

process.title = 'trace';

// bind

var addr = 'tcp://localhost:5555';
server.sub.bind(addr);
console.log('sub bound to %s', addr);

var addr = 'tcp://localhost:5556';
server.rep.bind(addr);
console.log('rep bound to %s', addr);