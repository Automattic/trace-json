#!/usr/bin/env node

/**
 * Module dependencies.
 */

var server = require('../lib/server')
  , program = require('commander')
  , pkg = require('../package');

// options

program
  .version(pkg.version)
  .parse(process.argv);

// bind

var addr = 'tcp://localhost:5555';
server.bind(addr);
console.log('bound to %s', addr);